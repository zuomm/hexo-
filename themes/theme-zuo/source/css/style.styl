@import "font-awesome.css"
@import "_variables"
@import "_util/mixin"
@import "highlight"

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
html, body, #container{
  height: 100%
}
body{
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%
}
a {
  text-decoration: none;
  &:hover {
    text-decoration: none;
  }
}
input, button {
  margin: 0
  padding: 0
  &::-moz-focus-inner {
    border: 0
    padding: 0
  }
}

.content {
  max-width: 1024px;
  margin: 0 auto;
}
main {
  display: block;
  margin: 0 auto;
  padding-top: 60px;
  min-height: calc(100vh - 50px);
  max-width: 1024px;
}
.left, .alignleft {
  float: left
}
.right, .alignright {
  float: right
}
.clearfix {
  *zoom: 1;
  /* 兼容 IE 低版本 */
  &::after, &::before {
    content: '';
    display: block;
    clear: both; 
  }
}

