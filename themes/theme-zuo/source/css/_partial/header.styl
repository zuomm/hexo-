.header {
  // position: fixed;
  // top:0;
  // display: flex;
  // justify-content: space-between; // space-between
  align-items: center; // baseline
  display: flex;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 60px;
  border-bottom: #FAFAFA solid 2px;
  padding-left: 10px;
  background: #FAFAFA;
  z-index: 300;

  .blog-title {
    color: #AAA;
    font-size: 24px;
    font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
    text-decoration: none;
    .logo {
      color: cadetblue;
    }
    .motto {
      font-size: 16px;
    }
  }
}
.menu {
  margin: 0;
  padding: 0;

  .menu-item {
    display: inline-block;
    margin-right: 10px;
    font-size: 16px;
  }
  .menu-item-link {
    color: #aaa;
    text-decoration: none;
    transition: all .2s linear;
    &:hover {
      color: #5f9ea0;
    }
  }

}
#site-process {
  position: fixed;
  left: 0;
  top: 58px;
  height: 2px;
  width: 0;
  background: #42A5F5;
  z-index: 300;
}